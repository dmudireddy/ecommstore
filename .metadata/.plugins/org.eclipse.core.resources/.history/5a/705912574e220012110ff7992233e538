require 'spec_helper'
describe Post do
it "create new post" do
  visit "/"
  click_on 'New Post'
  fill_in 'Title',:with => "title1"
  fill_in 'Body',:with => "body1"
  click_on 'Create Post'
  page.should have_content('Post was successfully created')
    page.should have_content('Title:title1')
  
end

end

